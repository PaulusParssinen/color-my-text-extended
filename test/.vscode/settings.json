{
  "colorMyTextExtended.configurations": [
    {
      "paths": ["fiftytwos.txt"],
      "rules": [
        {
          "patterns": [
            "(?<n_gram>\\w{3}).{0,16}(?<n_gram_repeat>\\k<n_gram>)",
            "(?<n_gram>\\w{3}).(?<offset_one>.).*(?<n_gram_repeat>\\k<n_gram>).(?<offset_one_2>\\k<offset_one>)"
          ],
          "decorations": [
            {
              "groups": ["n_gram", "n_gram_repeat"],
              "outline": "2px solid",
              "color": "Orange"
            },
            {
              "groups": ["offset_one", "offset_one_2"],
              "color": "#ffffff",
              "textDecoration": "underline"
            }
          ]
        },
        {
          "patterns": ["^.{2}"],
          "decorations": [
            {
              "fontStyle": "italic",
              "color": "lightblue"
            }
          ]
        }
      ]
    }
  ]
}
