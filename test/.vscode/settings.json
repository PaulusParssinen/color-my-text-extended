{
  "colorMyTextExtended.configurations": [
    {
      "paths": ["*.txt"],
      "rules": [
        {
          "patterns": ["^(?<prefix>.{2})(?<preamble>.{4})"],
          "decorations": [
            {
              "groups": ["preamble"],
              "description": "This a preamble",
              "after": {
                "contentText": " "
              }
            },
            {
              "groups": "prefix",
              "after": {
                "contentText": " "
              }
            }
          ]
        }
      ]
    },
    {
      "paths": ["**/*.txt"],
      "rules": [
        {
          "patterns": ["no hits"],
          "decorations": [
            {
              "textDecoration": "underline"
            }
          ]
        }
      ]
    },
    {
      "paths": ["50.txt"],
      "rules": [
        {
          "exhaustive": true,
          "patterns": [
            "^.{6,}(?<quad>(\\w)\\2\\2\\2)",
            "^.{6,}(?<triplet>(\\w)\\2\\2)",
            "^.{6,}(?<doublet>(\\w)\\2)"
          ],
          "decorations": [
            {
              "groups": ["quad", "triplet", "doublet"],
              "color": "orange",
              "textDecoration": "2px underline"
            }
          ]
        }
      ]
    },
    {
      "paths": ["52.txt"],
      "rules": [
        {
          "patterns": [
            "(?<n_gram>\\w{3}).{0,16}(?<n_gram_repeat>\\k<n_gram>)",
            "(?<n_gram>\\w{3}).(?<offset_one>.).*(?<n_gram_repeat>\\k<n_gram>).(?<offset_one_2>\\k<offset_one>)"
          ],
          "decorations": [
            {
              "groups": ["n_gram", "n_gram_repeat"],
              "outline": "2px solid",
              "color": "Orange"
            },
            {
              "groups": ["offset_one", "offset_one_2"],
              "color": "#ffffff",
              "textDecoration": "underline"
            }
          ]
        },
        {
          "patterns": ["^.{20,22}(?<first>.).{4}(?<second>\\k<first>)"],
          "decorations": [
            {
              "groups": ["first", "second"],
              "color": "red"
            }
          ]
        },
        {
          "patterns": ["^.{30,32}(?<first>.).{10}(?<second>\\k<first>)"],
          "decorations": [
            {
              "groups": ["first", "second"],
              "color": "yellow"
            }
          ]
        }
      ]
    }
  ]
}
